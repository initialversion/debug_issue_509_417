<div class="page-header">
  <h3>Review #<%= @review.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Session comment</dt>
      <dd>
        <% if @review.class_comment.present? %>
          <a href="/class_comments/<%= @review.session_comment_id %>">
            <%= @review.class_comment.class_member_id %>
          </a>
        <% end %>
      </dd>

      <dt>Class member</dt>
      <dd>
        <% if @review.class_member.present? %>
          <a href="/class_members/<%= @review.class_member_id %>">
            <%= @review.class_member.student_id %>
          </a>
        <% end %>
      </dd>

      <dt>Rating</dt>
      <dd><%= @review.rating %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/reviews" class="btn btn-primary">
        Back
      </a>
      <a href="/reviews/<%= @review.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_review/<%= @review.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
