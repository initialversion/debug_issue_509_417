<!-- Validation failure messages -->
<% if @student.errors.any? %>
  <% @student.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Student #<%= @student.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_student/<%= @student.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @student.name %>">
      </div>

      <!-- Label and input for last_name -->
      <div class="form-group">
        <label for="last_name" class="control-label">
          Last name
        </label>

        <input type="text" id="last_name" name="last_name" placeholder="Last name" class="form-control" value="<%= @student.last_name %>">
      </div>

      <!-- Label and input for mba_class -->
      <div class="form-group">
        <label for="mba_class" class="control-label">
          Mba class
        </label>

        <input type="text" id="mba_class" name="mba_class" placeholder="Mba class" class="form-control" value="<%= @student.mba_class %>">
      </div>

      <!-- Label and input for photo -->
      <div class="form-group">
        <label for="photo" class="control-label">
          Photo
        </label>

        <input type="text" id="photo" name="photo" placeholder="Photo" class="form-control" value="<%= @student.photo %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @student.user_id %>">
      </div>

      <button class="btn btn-warning">
        Update Student
      </button>
      or
      <a href="/students/<%= @student.id %>">Cancel</a>
    </form>
  </div>
</div>
